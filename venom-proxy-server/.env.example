# إعدادات الخادم الوسيط
PORT=3002
NODE_ENV=development

# إعدادات الأمان
API_SECRET_KEY=your-super-secret-api-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3001,https://your-render-backend.onrender.com

# إعدادات Venom
WHATSAPP_SESSION_NAME=attendance-system-proxy
WHATSAPP_HEADLESS=false
WHATSAPP_DEBUG=false
WHATSAPP_DISABLE_SPINS=true
WHATSAPP_DISABLE_WELCOME=true
WHATSAPP_AUTO_CLOSE=0
CHROME_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# مجلدات التخزين
TOKENS_PATH=./tokens
LOGS_PATH=./logs

# إعدادات الرسائل
MAX_MESSAGES_PER_MINUTE=15
MESSAGE_DELAY=3000
WHATSAPP_RETRY_DELAY=3000